<section class="register-page">
  <header class="page-header">
    <h1>Log into your Jungle account</h1>
  </header>

<div class="container">
  <div class="d-flex justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card">
          <div class="card-body">
          <%= form_tag '/login', html: {class: "form-horizontal"} do %>
            <div class="mb-3 row">
                <%= label_tag :email, "Email", class: "col-md-4 col-form-label text-md-end" %>
                <div class="col-md-8">
                  <%= text_field_tag :email %>
                </div>
            </div>
            <div class="mb-3 row">
                <%= label_tag :password, "Password", class: "col-md-4 col-form-label text-md-end" %>
                <div class="col-md-8">
                  <%= password_field_tag :password %>
                </div>
            </div>
          <div class="row">
            <div class="col-md-8 offset-md-2 d-flex justify-content-center">
            <%= submit_tag "Submit", class: "btn submit-button" %>
            </div>
          </div>
          <% end %>
       </div>
      </div>
    </div>
  </div>
</div>
</section>
